{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/server.js" },
    { "source": "/static/(.*)", "destination": "/frontend/build/static/$1" },
    { "source": "/favicon.ico", "destination": "/frontend/build/favicon.ico" },
    { "source": "/manifest.json", "destination": "/frontend/build/manifest.json" },
    { "source": "/(.*)", "destination": "/frontend/build/index.html" }
  ]
} 